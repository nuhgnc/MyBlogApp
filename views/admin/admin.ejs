<%- include ('../partials/header') %>
<header class="masthead" style="background-image: url('https://images.unsplash.com/photo-1643120382882-2e3de81f81c5?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1171&q=80')">
    <div class="container position-relative px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <div class="site-heading">
                    <h1>ADMIN DASHBOARD</h1>
                    <span class="subheading">Only for admins</span>
                </div>
            </div>
        </div>
    </div>
</header>
<br><br><br><br><br>



<div class="container">
    <h1 class="mx-auto">admin controls</h1>
    <% adminActions.forEach((actions) => { %>
        <div class="row" style="border: 15px;">
            <div class="col-lg-4 mx-auto">
                <button type="button" id="<%= actions.actionName %>" onclick="catchID(id)" class="btn w-100 btn-outline-primary btn-block "><%= actions.displayName %></button>
            </div>
        </div>
    <% });%>
</div>
<script>
    function catchID(clickedID){
       
        if (clickedID == clickedID){
            
            window.open ('/'+ clickedID).focus;
           
        }
    }
</script>

